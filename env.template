# XAUUSD Live Signal Engine Configuration
# Copy this file to .env and fill in your values

# Required: Polygon.io API key
POLYGON_API_KEY=your_polygon_api_key_here

# Required: Telegram bot credentials
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Symbol configuration (defaults shown)
BASE_SYMBOL=XAU
QUOTE_SYMBOL=USD

# WebSocket mode: quotes, aggs_minute, or aggs_second
WS_MODE=quotes

# Confidence thresholds for signal gating
THRESH_EXTREME=0.75
THRESH_HIGH=0.65

